<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Settings</h2>
    <% if @investor.private? %>
        <p><%= render partial: 'shared/notice_message', locals: {message: 'Your account is currently private.  If you want clients to contact you, change your account visibility.'} %></p>
    <% end %>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-7">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>User Settings</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <%= form_for [current_user, @investor], url: {action: :update}, html: {class: 'form-horizontal'} do |f| %>
            <%= render partial: 'investors/form', locals: {f: f, user: current_user} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="jumbotron">
        <h2>Create Client Account</h2>
        <span>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum tincidunt est vitae ultrices accumsan. <br></span>
        </br>
        <p><a href="/" role="button" class="btn btn-primary btn-lg">Learn more</a>
        </p>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="jumbotron">
        <h2>Create Client Account</h2>
        <span>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum tincidunt est vitae ultrices accumsan. <br></span>
        </br>
        <p><a role="button" class="btn btn-primary btn-lg">Learn more</a>
        </p>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>

  <script type="text/javascript">


    $(function() {

      $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
      });

    });

  </script>
<% end %>

