<%- model_class = Investor -%>
<div class="page-header">
  <h1><%=t '.title', :default => Investor %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @investor.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:linked_in) %></dt>
      <dd><pre class="prettyprint"><%= @investor.linked_in %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fax) %></dt>
      <dd><pre class="prettyprint"><%= @investor.fax %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price_from) %></dt>
      <dd><pre class="prettyprint"><%= @investor.price_from %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price_to) %></dt>
      <dd><pre class="prettyprint"><%= @investor.price_to %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:verified) %></dt>
      <dd><pre class="prettyprint"><%= @investor.verified %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:principal) %></dt>
      <dd><pre class="prettyprint"><%= @investor.principal %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:subscribed) %></dt>
      <dd><pre class="prettyprint"><%= @investor.subscribed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone) %></dt>
      <dd><pre class="prettyprint"><%= @investor.phone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_2) %></dt>
      <dd><pre class="prettyprint"><%= @investor.phone_2 %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              investors_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_investor_path(@investor), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              investor_path(@investor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

