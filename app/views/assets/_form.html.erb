<%= form_for @asset, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :size, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :size, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :land_size, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :land_size, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :price, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price_psf, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :price_psf, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hide_price, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :hide_price, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cap_rate, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :cap_rate, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occupancy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :occupancy, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :highlights, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :highlights, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year_built, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :year_built, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  assets_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
