<%- model_class = Campaign -%>
<div class="page-header">
  <h1><%=t '.title', :default => Campaign %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:sent) %></th>
      <th><%= model_class.human_attribute_name(:send_now) %></th>
      <th><%= model_class.human_attribute_name(:send_on) %></th>
      <th><%= model_class.human_attribute_name(:step_1_complete) %></th>
      <th><%= model_class.human_attribute_name(:step_2_complete) %></th>
      <th><%= model_class.human_attribute_name(:step_3_complete) %></th>
      <th><%= model_class.human_attribute_name(:step_4_complete) %></th>
      <th><%= model_class.human_attribute_name(:authorized) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.id %></td>
        <td><%= campaign.sent %></td>
        <td><%= campaign.send_now %></td>
        <td><%= campaign.send_on %></td>
        <td><%= campaign.step_1_complete %></td>
        <td><%= campaign.step_2_complete %></td>
        <td><%= campaign.step_3_complete %></td>
        <td><%= campaign.step_4_complete %></td>
        <td><%= campaign.authorized %></td>
        <td><%=l campaign.created_at, format: :long %></td>
        <td>
          <%= link_to campaign_path(campaign), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to campaign_path(campaign), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_campaign_path,
            :class => 'btn btn-primary' %>
