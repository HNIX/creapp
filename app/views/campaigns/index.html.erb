<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Asset</th>
      <th>Sent</th>
      <th>Send now</th>
      <th>Send on</th>
      <th>Step 1 complete</th>
      <th>Step 2 complete</th>
      <th>Step 3 complete</th>
      <th>Step 4 complete</th>
      <th>Authorized</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.client %></td>
        <td><%= campaign.asset %></td>
        <td><%= campaign.sent %></td>
        <td><%= campaign.send_now %></td>
        <td><%= campaign.send_on %></td>
        <td><%= campaign.step_1_complete %></td>
        <td><%= campaign.step_2_complete %></td>
        <td><%= campaign.step_3_complete %></td>
        <td><%= campaign.step_4_complete %></td>
        <td><%= campaign.authorized %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

